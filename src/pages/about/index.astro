---
import GlobalLayout from "../../layouts/GlobalLayout.astro"
import text from "../../data/text/about.json"
---
<GlobalLayout>
    <div class="font-sans pt-4 px-24 text-lg">
        <div class="flex flex-col items-center">
            <div class="py-4 text-lg font-bold">
                <p>About On Pacific Street</p>
            </div>
            
        </div>
            
        <div>
            <p class="py-4">{text.text.paragraph1}</p>
            <p class="py-4">{text.text.paragraph2}</p>
            <p class="py-4">{text.text.paragraph3}</p>
        </div>
        <div class="py-4">
            <p>Much love,</p>
            <p>Your friends on Pacific St.</p>
        </div>
        <div class="flex flex-col items-center pt-16">
            <div class="w-[75%]">
                <img src="/images/on-pacific-st-room.jpg">
            </div>
        </div>
        
        
    </div>
</GlobalLayout>